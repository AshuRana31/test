# AWS Multi-Environment Networking Infrastructure - Example Configuration
# Generated by Backstage AWS Networking Template
# Single Terraform configuration with environment-specific .tfvars files

# Project Information
project_name = "{{ values.projectName }}"
client_name  = "{{ values.clientName }}"
description  = "{{ values.description }}"
environment  = "development"  # Change this for each environment

# AWS Configuration
region             = "{{ values.region }}"
availability_zones = {{ values.availabilityZones }}

# VPC Configuration
# Use different CIDR blocks for each environment to avoid conflicts
vpc_cidr = "10.0.0.0/16"  # Development: 10.0.0.0/16, Staging: 10.2.0.0/16, UAT: 10.4.0.0/16, Production: 10.6.0.0/16

# Network Architecture
# Options: basic (public only), standard (public + private), advanced (public + private + database)
network_tier = "{{ values.networkTier | default('standard') }}"

# NAT Gateway Configuration
# NAT Gateways cost ~$45/month per AZ
enable_nat_gateway = false  # Set to true for staging, uat, and production

# VPC Flow Logs (recommended for production)
enable_vpc_flow_logs = false  # Set to true for production

# VPC Endpoints (optional - reduces NAT Gateway costs)
enable_vpc_endpoints = {{ values.enableVpcEndpoints | default(false) }}

# Account ID (optional - for cross-account deployments)
# account_id = "123456789012"

# Environment-specific examples:

# Development (cost-optimized):
# environment = "development"
# vpc_cidr = "10.0.0.0/16"
# enable_nat_gateway = false
# enable_vpc_flow_logs = false
# network_tier = "basic"

# Staging (production-like):
# environment = "staging"
# vpc_cidr = "10.2.0.0/16"
# enable_nat_gateway = true
# enable_vpc_flow_logs = false
# network_tier = "standard"

# UAT (user testing):
# environment = "uat"
# vpc_cidr = "10.4.0.0/16"
# enable_nat_gateway = true
# enable_vpc_flow_logs = false
# network_tier = "standard"

# Production (full features):
# environment = "production"
# vpc_cidr = "10.6.0.0/16"
# enable_nat_gateway = true
# enable_vpc_flow_logs = true
# network_tier = "advanced"
# enable_vpc_endpoints = true